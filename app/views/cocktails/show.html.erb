<h1><%= @cocktail.name %></h1>


<div class="row">
<% @cocktail.doses.each do |dose| %>
<div class="col-4">
  <div class="cocktail">
    <div class="image" style="background-image: url(https://cdn.drawception.com/images/panels/2017/2-15/Ecbtjpb6ZY-1.png)"></div>
      <div>
        <p> <% dose.description %></p>
        <p> <% dose.ingredient.name %></p>
      </div>
  </div>
</div>
<% end %>
</div>
</div>

<p class="btn"><%= link_to 'Liste cocktails', cocktails_path %></p>



<p class="btn"><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
